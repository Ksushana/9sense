                h3 Публикации
                ul.about__works
                  li: +link-text( "Quintessenz Zahntech 2013;<br /> 39 (3): 280–290", href="Quintessenz Zahntech 2013.pdf", "link-text--grey" )
                  li: +link-text( "Quintessenz Zahntech 2014;<br /> 40(9): 1164–1175", href="Quintessenz Zahntech 2014.pdf", "link-text--grey" )

