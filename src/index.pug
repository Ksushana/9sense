include pug/mixins

block variables
- let mainTitle = "Nine Sense Clinic";

doctype html
html.page-loading( lang="ru" )
  head
    meta( charset="UTF-8" )
    title #{mainTitle} !{title && "| " + title}
    meta( name="viewport" content="width=device-width, initial-scale=1.0" )

    <link rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon.png?v=yy4QkQ8z0E">
    <link rel="icon" type="image/png" sizes="32x32" href="favicon-32x32.png?v=yy4QkQ8z0E">
    <link rel="icon" type="image/png" sizes="16x16" href="favicon-16x16.png?v=yy4QkQ8z0E">
